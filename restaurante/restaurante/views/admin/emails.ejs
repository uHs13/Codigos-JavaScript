<%- include('./../includesadmin/header.ejs') -%>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    E-mails
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
                    <li class="active">E-mails</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content container-fluid">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Lista</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>E-mail</th>
                                    <th style="min-width: 75px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Object.keys(emails).forEach(key => { %>
                                <tr data-row=<%=JSON.stringify(emails[key])%>>
                                    <td><%= eval(key) + 1 %></td>
                                    <td><%= emails[key].email %></td>
                                    <td><button type="button" class="btn btn-xs btn-danger btn-delete"><i class="fa fa-trash"></i> Excluir</button></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <script>
            document.querySelector('#emails').classList.add('active');
        </script>

<script src="/js/sendFormData/SendFormData.js"></script>
<script src="/js/elFunctions/ElFunctions.js"></script>
<script src="/js/grid/Grid.js"></script>

<script>

  new Grid({
    deleteUrl: '/admin/emails/${trData.id}',
    deleteMsg: 'delete ${trData.email} ?'
  });

</script>
