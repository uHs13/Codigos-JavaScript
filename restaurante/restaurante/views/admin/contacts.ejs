<%- include('./../includesadmin/header.ejs') -%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Contatos
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
      <li class="active">Contatos</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content container-fluid">

    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Lista</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding table-responsive text-nowrap">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Mensagem</th>
              <th style="min-width: 75px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% Object.keys(contacts).forEach(key => { %>
            <tr data-row='<%= JSON.stringify(contacts[key])%>'>
              <td><%= eval(key) + 1 %></td>
              <td><%= contacts[key].name %></td>
              <td><%= contacts[key].email %></td>
              <td><%= contacts[key].message %></td>
              <td><a class="btn btn-xs btn-danger btn-delete"><i class="fa fa-trash"></i> Excluir</a></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
  document.querySelector('#contacts').classList.add('active');
</script>

<script src="/js/sendFormData/SendFormData.js"></script>
<script src="/js/elFunctions/ElFunctions.js"></script>
<script src="/js/grid/Grid.js"></script>

<script>

  new Grid({
    deleteUrl: '/admin/contacts/${trData.id}',
    deleteMsg: 'delete ${trData.name} ?'
  });

</script>

